<?xml version="1.0" encoding="utf-8"?>
<Specification>
  <Properties>
    <ПрефиексНомера>КП-ЧД</ПрефиексНомера>

    <Товар>
      <Имя>$Товар_ИмяЖурнала № $НомерЖурнала $ГодЖурнала</Имя>
      <КонечнаяЦена>$(Товар_Цена * (100 - Фирма_Скидка) / 100)</КонечнаяЦена>
      <Сумма>$(Фирма_Количество * Товар_КонечнаяЦена)</Сумма>
      <СуммаПрописью>$(РублиПрописью(Товар_Сумма))</СуммаПрописью>
    </Товар>

    <Номер>$ПрефиексНомера-$ГодЖурнала-$НомерЖурнала</Номер>

    <Мы>
      <БанковскиеРеквизиты>р.с. $Мы_РассчетрыйСчет, в $Мы_ВБанке, к.с. $Мы_КорСчет, БИК $Мы_БИК</БанковскиеРеквизиты>
    </Мы>
  </Properties>
</Specification>