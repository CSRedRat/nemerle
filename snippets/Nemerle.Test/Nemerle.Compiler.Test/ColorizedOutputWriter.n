using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace Nemerle.Compiler.Test
{
  /// <summary>
  /// Description of ColorizedOutputWriter.
  /// </summary>
  internal abstract class ColorizedOutputWriter
  {
    public abstract Write(color : ConsoleColor?, text : string) : void;
