//using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Console;
//using System.Linq;
using Nemerle.Unsafe;

module Program
{
  mutable i = 0;

  ary = array[42, 2, 3];
  str = "abc";

  Test1() : void
  {
    pinned (p1 = str)
        WriteLine(p1[0]);
  }

  Test2() : void
  {
    pinned (p1 = str)
    {
      WriteLine(string(p1, 1, 2));
      
      def len = str.Length;

      WriteLine("for with index");
      
      for (mutable i = 0; i < len; i++)
        WriteLine(p1[i]);
        
      WriteLine("for with pinter");
      
      for (; *p1 != '\0'; p1++)
        WriteLine(*p1); 

      WriteLine("end for");
    }

    i = 0;
    
    pinned (p2 = ary)
    {
      WriteLine(p2[i]);
      p2 += 2;
      WriteLine(*p2);
    }
  }
  
  Main() : void
  {
    Test1();
    Test2();
  }
}